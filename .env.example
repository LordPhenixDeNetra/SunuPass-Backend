APP_NAME=SunuPass
ENVIRONMENT=local
DEBUG=false
DATABASE_URL=sqlite:///./app.db
# Exemple PostgreSQL (AlwaysData) :
# DATABASE_URL=postgresql+psycopg2://netra:CHANGE_ME@postgresql-netra.alwaysdata.net/netra_sunupass
# Si SSL est requis :
# DATABASE_URL=postgresql+psycopg2://netra:CHANGE_ME@postgresql-netra.alwaysdata.net/netra_sunupass?sslmode=require
DB_ECHO=false
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
JWT_SECRET_KEY=CHANGE_ME
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
ENV_FILE=.env

FIREBASE_AUTH_ENABLED=false
# Option 1: chemin local vers le JSON "service account"
FIREBASE_CREDENTIALS_PATH=
# Option 2: JSON complet (une seule ligne) si vous ne voulez pas de fichier
FIREBASE_SERVICE_ACCOUNT_JSON=
# Optionnel: project id Firebase (utile si vous utilisez ApplicationDefault)
FIREBASE_PROJECT_ID=
